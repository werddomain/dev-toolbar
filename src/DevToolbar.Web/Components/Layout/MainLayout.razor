@inherits LayoutComponentBase

<div class="maui-desktop-preview">
    <div class="toolbar-preview-frame">
        @Body
    </div>
    <p class="maui-preview-hint" aria-label="Web preview notice">
        This is a <strong>Web preview</strong> of the MAUI desktop toolbar. The real app runs as a borderless, always-on-top floating toolbar.
    </p>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
