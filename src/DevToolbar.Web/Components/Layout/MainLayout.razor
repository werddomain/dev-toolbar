@inherits LayoutComponentBase

<div class="maui-desktop-preview">
    <div class="maui-window" id="maui-window">
        <div class="maui-titlebar">
            <span class="maui-titlebar-icon">🛠</span>
            <span class="maui-titlebar-text">DevToolbar — Desktop Preview</span>
            <span class="maui-titlebar-spacer"></span>
            <button class="maui-titlebar-btn maui-btn-minimize" title="Minimize" aria-label="Minimize window" disabled>─</button>
            <button class="maui-titlebar-btn maui-btn-maximize" title="Maximize" aria-label="Maximize window" disabled>☐</button>
            <button class="maui-titlebar-btn maui-btn-close" title="Close" aria-label="Close window" disabled>✕</button>
        </div>
        <div class="maui-content">
            @Body
        </div>
    </div>
    <p class="maui-preview-hint" aria-label="Web preview notice">
        This is a <strong>Web preview</strong> of the MAUI desktop toolbar. The real app runs as a borderless, always-on-top window.
    </p>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
