<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DevToolbar.Maui.Themes.GreenTheme">

    <!-- ═══ Shell ═══ -->
    <LinearGradientBrush x:Key="ShellBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C84B8246" Offset="0" />
        <GradientStop Color="#DC376A32" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ShellBorder" Color="#3CFFFFFF" />

    <!-- ═══ Project Pill ═══ -->
    <LinearGradientBrush x:Key="ProjectPillBackground" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#5AAF50" Offset="0" />
        <GradientStop Color="#419141" Offset="1" />
    </LinearGradientBrush>
    <Color x:Key="ProjectPillTextColor">#FFFFFF</Color>

    <!-- ═══ Git Branch Pill ═══ -->
    <LinearGradientBrush x:Key="GitPillBackground" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#E6325F2D" Offset="0" />
        <GradientStop Color="#F5264B23" Offset="1" />
    </LinearGradientBrush>
    <Color x:Key="GitPillTextColor">#E0FFFFFF</Color>

    <!-- ═══ Action Buttons ═══ -->
    <SolidColorBrush x:Key="ActionButtonBackground" Color="#1EFFFFFF" />
    <Color x:Key="ActionButtonForegroundColor">#B4FFFFFF</Color>
    <SolidColorBrush x:Key="ActionButtonHoverBackground" Color="#3CFFFFFF" />
    <SolidColorBrush x:Key="ActionButtonBorder" Color="#1EFFFFFF" />

    <!-- ═══ System Pill ═══ -->
    <LinearGradientBrush x:Key="SystemPillBackground" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="#E62D5128" Offset="0" />
        <GradientStop Color="#F5234020" Offset="1" />
    </LinearGradientBrush>
    <Color x:Key="SystemPillTextColor">#D2FFFFFF</Color>
    <Color x:Key="SystemPillSecondaryColor">#8CFFFFFF</Color>

    <!-- ═══ Dropdown ═══ -->
    <SolidColorBrush x:Key="DropdownBackground" Color="#FA264523" />
    <SolidColorBrush x:Key="DropdownBorder" Color="#1EFFFFFF" />
    <SolidColorBrush x:Key="DropdownItemHover" Color="#12FFFFFF" />
    <Color x:Key="DropdownTextColor">#DCFFFFFF</Color>

</ResourceDictionary>
