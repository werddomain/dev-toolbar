<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:DevToolbar.Maui.ViewModels"
    x:Class="DevToolbar.Maui.Controls.SystemPillView"
    x:DataType="vm:ToolbarViewModel">

    <!--
        Zone 4: System pill. Timer display + settings gear.
        Rounded dark pill on the right side.
    -->
    <Border 
        StrokeShape="RoundRectangle 28"
        HeightRequest="44"
        Background="{DynamicResource SystemPillBackground}"
        Padding="16,0,12,0">

        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
            <!-- Clock icon -->
            <Label 
                Text="&#xE823;" 
                FontFamily="Segoe MDL2 Assets" 
                FontSize="16"
                TextColor="{DynamicResource SystemPillSecondaryColor}" 
                VerticalOptions="Center" />

            <!-- Timer text (monospaced) -->
            <Label 
                Text="{Binding TimerText}" 
                FontSize="15"
                FontAttributes="Bold"
                TextColor="{DynamicResource SystemPillTextColor}"
                VerticalOptions="Center"
                FontFamily="Consolas" />

            <!-- Settings gear button -->
            <Border 
                x:Name="SettingsButton"
                StrokeShape="RoundRectangle 16"
                WidthRequest="32" HeightRequest="32"
                BackgroundColor="Transparent">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenSettingsCommand}" />
                    <PointerGestureRecognizer 
                        PointerEntered="OnSettingsPointerEntered"
                        PointerExited="OnSettingsPointerExited" />
                </Border.GestureRecognizers>
                <Label 
                    Text="&#xE713;" 
                    FontFamily="Segoe MDL2 Assets" 
                    FontSize="16"
                    TextColor="{DynamicResource SystemPillSecondaryColor}"
                    HorizontalOptions="Center" VerticalOptions="Center" />
            </Border>
        </HorizontalStackLayout>
    </Border>

</ContentView>
